<script>
    const api_path = document.getElementById('vue_api_path').value.toString()
    console.log('API Path: ', api_path)
    // const host_id = document.getElementById('host_id').value

    // const listings_url = 'http://localhost:' + api_path + '/updaters'
    // const fetch_options = {
    //     method: 'GET',
    //     mode: 'no-cors'
    // }

    const app = new Vue({
        el: '#app',
        data: {
            listings: []
        },
        created() {
            fetch(api_path)
                .then(response => response.json())
                .then(json => {
                    this.listings = json
                })
        }
    })
</script>