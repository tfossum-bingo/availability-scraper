<p id="notice"><%= notice %></p>

<%= link_to 'Refresh settings', updaters_path %>

<h1>Hosts</h1>

<table>
  <thead>
    <tr>
      <th>Host name</th>
      <th>Airbnb</th>
      <th>Active</th>
      <th>Last scrapped</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hosts.each do |host| %>
      <tr>
        <td><%= host.host_name %></td>
        <td><%= host.airbnb_id %></td>
        <td><%= host.active %></td>
        <td><%= host.last_scraped %></td>
        <td><%= link_to 'Show', host %></td>
        <td><%= link_to 'Edit', edit_host_path(host) %></td>
        <td><%= link_to 'Destroy', host, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Host', new_host_path %>
