<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>Host</th>
      <th>Airbnb</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>State</th>
      <th>Postal code</th>
      <th>Active</th>
      <th>Last scraped</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.host_id %></td>
        <td><%= listing.airbnb_id %></td>
        <td><%= listing.address1 %></td>
        <td><%= listing.address2 %></td>
        <td><%= listing.city %></td>
        <td><%= listing.state %></td>
        <td><%= listing.postal_code %></td>
        <td><%= listing.active %></td>
        <td><%= listing.last_scraped %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>
